{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha", "chai"],
    "outDir": "./dist"  // Optional: For compiled JS output if needed
  },
  "include": ["hardhat.config.ts", "scripts/**/*.ts", "test/**/*.ts", "relayer.ts"],
  "exclude": ["node_modules"]
}
